# ===========================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ===========================================

# Server Configuration
PORT=3000
NODE_ENV=production
API_PREFIX=/api/v1

# Database Configuration (Use production database)
DATABASE_URL=postgresql://username:password@prod-db-host:5432/milk-management-prod

# JWT Configuration (MUST BE STRONG IN PRODUCTION!)
JWT_SECRET=your-super-strong-production-jwt-secret-key-at-least-32-characters-long
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=your-super-strong-production-refresh-secret-key-at-least-32-characters-long
JWT_REFRESH_EXPIRES_IN=90d

# CORS Configuration (ONLY PRODUCTION DOMAINS!)
ALLOWED_ORIGINS=https://your-production-domain.com,https://admin.your-domain.com

# Rate Limiting (Stricter for production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=60

# Socket.io Configuration
SOCKET_CORS_ORIGINS=https://your-production-domain.com,https://admin.your-domain.com

# Logging Configuration
LOG_LEVEL=warn
LOG_FILE=logs/app.log

# Security Configuration
BCRYPT_ROUNDS=14
PIN_SALT_ROUNDS=12

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-production-email@gmail.com
SMTP_PASS=your-production-app-password
SMTP_FROM=noreply@your-domain.com

# Frontend URL
FRONTEND_URL=https://your-production-domain.com

# App Information
APP_NAME=Dudh Wala API
APP_VERSION=1.0.0

# Redis Configuration (Recommended for production)
REDIS_URL=redis://your-redis-host:6379
# Dudh Wala Backend Environment Variables

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/dudh_wala_db?schema=public"

# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration (for password reset and verification)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@dhudhwala.com

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:8081

# CORS Configuration
ALLOWED_ORIGINS="http://localhost:8081,exp://192.168.1.100:8081"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Socket.io Configuration
SOCKET_CORS_ORIGINS="http://localhost:8081,exp://192.168.1.100:8081"

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Security
BCRYPT_ROUNDS=12
PIN_SALT_ROUNDS=10

# Redis (optional - for caching and sessions)
REDIS_URL="redis://localhost:6379"

# Email Configuration (optional - for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# App Configuration
APP_NAME="Dudh Wala API"
APP_VERSION="1.0.0"
API_PREFIX="/api/v1"